<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.momecho.AboutUsActivity"
    android:background="#ECEFF1">
    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:textColor="#F48FB1"
        android:textSize="20sp"
        android:text="Mo'mecho is an online mechanic shop. We connect car owner with specialised mechanics at an affordable price."/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about"
        android:layout_centerHorizontal="true"
        android:text="Don't get standed with a faulty car"
        android:fontFamily="cursive"
        android:textColor="#F44336"
        android:textStyle="bold"
        android:textSize="20sp"/>

</RelativeLayout>
